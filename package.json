{
  "name": "simple-eval",
  "version": "1.0.2",
  "description": "Simple JavaScript expression evaluator",
  "keywords": [
    "eval",
    "evaluation",
    "code evaluation",
    "code execution",
    "ast"
  ],
  "homepage": "https://github.com/P0lip/simple-eval",
  "bugs": {
    "url": "https://github.com/P0lip/simple-eval/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "src/*.d.ts",
    "src/*.mjs",
    "dist/"
  ],
  "typings": "./src/index.d.ts",
  "type": "commonjs",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.mjs",
      "require": "./dist/index.js"
    },
    "./eval": {
      "types": "./src/reduce.d.ts",
      "import": "./src/reduce.mjs",
      "require": "./dist/reduce.js"
    }
  },
  "license": "MIT",
  "author": "Jakub Ro≈ºek",
  "repository": {
    "type": "git",
    "url": "https://github.com/P0lip/simple-eval"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "lint": "eslint --cache --cache-location .cache/ src/**/*.mjs",
    "test": "cross-env NODE_ENV=test c8 mocha --config .mocharc ./src/__tests__/*.mjs",
    "prepublish": "npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "jsep": "^1.4.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-chai-expect": "^3.1.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "espree": "^10.3.0",
    "husky": "^9.1.7",
    "mocha": "^11.1.0",
    "mocha-each": "^2.0.1",
    "prettier": "^3.5.1",
    "rollup": "^4.34.8"
  }
}
